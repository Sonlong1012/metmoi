  @{
    ViewData["Title"] = "Home Page";
} 


@model List<Webbanhang_22011267.Models.Product>
 
  <div id="templatemo_content_right">
 <style>
    .product_container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
        margin: 20px ;
    }

    .row {
        display: flex;
        justify-content: space-between;
        width: 100%;
        gap: 20px;
    }

    .templatemo_product_box {
        width: calc(50% - 10px); /* 50% để có 2 sản phẩm trong mỗi hàng, trừ đi khoảng cách giữa chúng */
        margin-right: 10px;
        margin-bottom: 20px;
           
    }

           
</style>

    @foreach (var p in Model)
    {

        

       <div class="templatemo_product_box">
            <h1>@p.Ten<span>(by Best Author)</span></h1>
            <img src="~/@p.Hinh" alt="image" />
            <div class="product_info">
                <p>Etiam luctus. Quisque facilisis suscipit elit. Curabitur...</p>
                <h3>@p.Gia</h3>
                <div class="buy_now_button"><a href="subpage.html">Buy Now</a></div>
                <div class="detail_button"><a href="Products/Details/@p.Id">Detail</a></div>
            </div>
       </div>
      
       
    }
    <div class="cleaner_with_height">&nbsp;</div>
    <a href="subpage.html"><img src="~/assets/images/templatemo_ads.jpg" alt="ads" /></a>
    
</div>  <!-- end of content right -->


@foreach (var p in Model)
{
    <partial name="_Product" model="p"/>
}
