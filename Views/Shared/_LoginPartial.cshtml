@using Microsoft.AspNetCore.Identity
@using Webbanhang_22011267.Data
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


@if (SignInManager.IsSignedIn(User))
{

        <a id="manage" class="nav-link text-dark" href="#" title="Manage">Hello @UserManager.GetUserName(User)!</a>

        <form id="logoutForm" class="form-inline"  asp-action="Logout" asp-controller="user" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>

}
else
{

            <a class="nav-link text-dark" id="register" asp-action="Register" asp-controller="user">Register</a>

            <a class="nav-link text-dark" id="login" asp-action="Login" asp-controller="user">Login</a>

}
